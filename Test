<body>
    <header>
        <h1>مدیریت داده‌های مرورگر</h1>
        <div class="loader" id="loader"></div>
    </header>
    <main>
        <ul class="website-list" id="websiteList"></ul>
    </main>
    <div class="modal" id="dataModal">
        <div class="modal-content">
            <span class="close" id="closeModal">&times;</span>
            <h2 id="modalTitle"></h2>
            <textarea id="dataContent"></textarea>
            <button id="saveEdit">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                    <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                    <polyline points="17 21 17 13 7 13 7 21"></polyline>
                    <polyline points="7 3 7 8 15 8"></polyline>
                </svg>
                ذخیره تغییرات
            </button>
        </div>
    </div>
    <footer>
        <p>نسخه 1.0 - طراحی شده با ❤️</p>
    </footer>

    <script>
        const websiteList = document.getElementById('websiteList');
        const loader = document.getElementById('loader');
        const dataModal = document.getElementById('dataModal');
        const modalTitle = document.getElementById('modalTitle');
        const dataContent = document.getElementById('dataContent');
        const closeModal = document.getElementById('closeModal');
        const saveEdit = document.getElementById('saveEdit');

        // نمونه داده‌های تستی
        const sampleData = {
            'example.com': 'داده‌های کش و کوکی‌های example.com',
            'test.com': 'اطلاعات ذخیره‌شده test.com'
        };

        // ساخت لیست وبسایت‌ها
        function loadWebsiteList() {
            loader.style.display = 'block';
            websiteList.innerHTML = '';
            setTimeout(() => {
                Object.keys(sampleData).forEach(site => {
                    const li = document.createElement('li');
                    li.className = 'website-item';
                    li.innerHTML = `
                        <span class="website-name">${site}</span>
                        <div class="buttons">
                            <button class="view-btn" onclick="showData('${site}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                    <circle cx="12" cy="12" r="3"></circle>
                                </svg>
                                نمایش
                            </button>
                            <button class="edit-btn" onclick="editData('${site}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                </svg>
                                ویرایش
                            </button>
                            <button class="delete-btn" onclick="deleteData('${site}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                    <polyline points="3 6 5 6 21 6"></polyline>
                                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                </svg>
                                پاک کردن
                            </button>
                            <button class="backup-btn" onclick="backupData('${site}')">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="7 10 12 15 17 10"></polyline>
                                    <line x1="12" y1="15" x2="12" y2="3"></line>
                                </svg>
                                پشتیبان‌گیری
                            </button>
                        </div>
                    `;
                    websiteList.appendChild(li);
                });
                loader.style.display = 'none';
            }, 1000); // شبیه‌سازی بارگذاری
        }

        // نمایش داده‌ها
        function showData(site) {
            modalTitle.textContent = `داده‌های ${site}`;
            dataContent.value = sampleData[site];
            dataContent.disabled = true;
            saveEdit.style.display = 'none';
            dataModal.style.display = 'flex';
        }

        // ویرایش داده‌ها
        function editData(site) {
            modalTitle.textContent = `ویرایش داده‌های ${site}`;
            dataContent.value = sampleData[site];
            dataContent.disabled = false;
            saveEdit.style.display = 'flex';
            dataModal.style.display = 'flex';
            saveEdit.onclick = () => {
                sampleData[site] = dataContent.value;
                alert('تغییرات با موفقیت ذخیره شد.');
                dataModal.style.display = 'none';
            };
        }

        // پاک کردن داده‌ها
        function deleteData(site) {
            if (confirm(`آیا مطمئن هستید که می‌خواهید داده‌های ${site} را پاک کنید؟`)) {
                delete sampleData[site];
                loadWebsiteList();
                alert(`داده‌های ${site} پاک شد.`);
            }
        }

        // پشتیبان‌گیری
        function backupData(site) {
            const data = JSON.stringify({ [site]: sampleData[site] });
            const blob = new Blob([data], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${site}_backup.json`;
            a.click();
            URL.revokeObjectURL(url);
        }

        // بستن modal
        closeModal.addEventListener('click', () => {
            dataModal.style.display = 'none';
        });

        // بارگذاری اولیه
        loadWebsiteList();
    </script>
</body>
</html>
